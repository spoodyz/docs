  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@klyra.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.klyra.io"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/klyraAPI",
